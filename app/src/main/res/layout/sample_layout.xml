<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:background="@color/white"
        app:cardElevation="0dp"
        android:layout_margin="7dp"
        android:id="@+id/sample_layout_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/sample_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/this_is_title"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sample_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_desc"
                android:layout_marginTop="2dp"
                android:textColor="@color/decs_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sample_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/month"
                android:textColor="@color/date_color"
                android:textSize="12sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>